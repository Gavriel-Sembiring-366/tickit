<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashScreenFragment">

    <!-- Splash Screen Fragment -->
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.tickit.ui.splashScreen.SplashScreen"
        android:label="Splash Screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_tampilanAwalFragment"
            app:destination="@id/tampilanAwalFragment" />
    </fragment>

    <!-- Tampilan Awal Fragment -->
    <fragment
        android:id="@+id/tampilanAwalFragment"
        android:name="com.example.tickit.ui.tampilanAwal.TampilanAwal"
        android:label="Tampilan Awal"
        tools:layout="@layout/fragment_tampilan_awal">
        <action
            android:id="@+id/action_tampilanAwalFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tickit.ui.login.Login"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/konfirmasiPassword" />
        <action
            android:id="@+id/action_loginFragment_to_tampilanAwalFragment"
            app:destination="@id/tampilanAwalFragment" />

    </fragment>

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.tickit.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Register Fragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.tickit.ui.daftar.Daftar"
        android:label="Register"
        tools:layout="@layout/fragment_daftar">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_verifikasiEmailFragment"
            app:destination="@id/verifikasiEmailFragment" />
    </fragment>

    <!-- Verifikasi Email Fragment -->
    <fragment
        android:id="@+id/verifikasiEmailFragment"
        android:name="com.example.tickit.ui.verifikasiEmail.VerifikasiEmail"
        android:label="Verifikasi Email"
        tools:layout="@layout/fragment_verifikasi_email">
        <action
            android:id="@+id/action_verifikasiEmailFragment_to_konfirmasiPasswordFragment"
            app:destination="@id/konfirmasiPassword" />
        <action
            android:id="@+id/action_verifikasiEmailFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- Konfirmasi Password Fragment -->
    <fragment
        android:id="@+id/konfirmasiPassword"
        android:name="com.example.tickit.ui.konfirmasiPassword.KonfirmasiPassword"
        android:label="Konfirmasi Password"
        tools:layout="@layout/fragment_konfirmasi_password">
        <action
            android:id="@+id/action_konfirmasiPassword_to_verifikasiEmailFragment"
            app:destination="@id/verifikasiEmailFragment" />
        <action
            android:id="@+id/action_konfirmasiPassword_to_daftarSuksesFragment"
            app:destination="@id/daftarSuksesFragment" />
    </fragment>

    <!-- Daftar Sukses Fragment -->
    <fragment
        android:id="@+id/daftarSuksesFragment"
        android:name="com.example.tickit.ui.daftarSukses.DaftarSukses"
        android:label="Daftar Sukses"
        tools:layout="@layout/fragment_daftar_sukses" />
</navigation>